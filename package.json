{
  "author": "twistezo",
  "bugs": {
    "url": "https://github.com/twistezo/ifless/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twistezo/ifless.git"
  },
  "description": "Elegant, readable conditional logic for JavaScript/TypeScript using natural language operators (AND, OR, NOT) and template literals.",
  "name": "ifless",
  "homepage": "https://github.com/twistezo/ifless",
  "keywords": [
    "conditional",
    "logic",
    "template literals",
    "ifless",
    "AND",
    "OR",
    "NOT",
    "short-circuit",
    "lazy evaluation",
    "typescript",
    "javascript"
  ],
  "type": "module",
  "main": "dist/cjs/index.cjs.js",
  "module": "dist/esm/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "build:esm": "bun build src/index.ts --outdir dist/esm --format esm",
    "build:cjs": "bun build src/index.ts --outdir dist/cjs --format cjs",
    "build:types": "bun run tsc --emitDeclarationOnly",
    "build": "rimraf dist && bun run build:esm && bun run build:cjs && bun run build:types",
    "postbuild": "mv dist/cjs/index.js dist/cjs/index.cjs && mv dist/esm/index.js dist/esm/index.mjs",
    "test": "bun test",
    "test:integration:esm": "bun run build && bun tests/integration/test-dist-esm.mjs",
    "test:integration:cjs": "bun run build && node tests/integration/test-dist-cjs.cjs",
    "test:integration": "bun run test:integration:esm && bun run test:integration:cjs",
    "lint": "bun run eslint src tests --ext ts",
    "lint:write": "bun run eslint src tests --ext ts --fix",
    "typecheck": "bun run tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.4.0",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "typescript-eslint": "^8.53.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
